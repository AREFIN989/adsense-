    <!-- Monetag Script -->
    <script src="//libtl.com/sdk.js" data-zone="9709440" data-sdk="show_9709440"></script>

    <script>
        // User data
        let points = parseInt(localStorage.getItem('userPoints') || '0');
        let balance = parseFloat(localStorage.getItem('userBalance') || '0.00');

        function updateBalance() {
            document.getElementById('userPoints').textContent = points;
            document.getElementById('userBalance').textContent = balance.toFixed(2);
            localStorage.setItem('userPoints', points);
            localStorage.setItem('userBalance', balance.toFixed(2));
        }

        function addReward() {
            points += 10;
            balance += 0.01;
            updateBalance();
            alert('You earned 10 points!');
        }

        // Monetag ad handling
        let monetagReady = false;
        window.addEventListener('load', () => {
            if (typeof show_9709440 === 'function') monetagReady = true;
        });

        document.getElementById('monetagBtn').addEventListener('click', () => {
            if (monetagReady) {
                show_9709440().then(addReward).catch(() => alert('Monetag ad not available.'));
            } else {
                alert('Monetag ad not loaded yet, try again.');
            }
        });

        // Adsterra ad handling
        document.getElementById('adsterraBtn').addEventListener('click', () => {
            window.open('https://www.profitableratecpm.com/ygvx6e0t?key=5ea7d587da4d2331b8576229943a202e', '_blank');
            addReward();
        });

        // Gigapub ad handling
        document.getElementById('gigapubBtn').addEventListener('click', () => {
            let script = document.createElement('script');
            script.src = "https://ad.gigapub.tech/script?id=1659";
            script.onload = () => {
                if (typeof GigaPubAd === 'object' && typeof GigaPubAd.showAd === 'function') {
                    GigaPubAd.showAd().then(addReward).catch(() => alert('Gigapub ad not available.'));
                } else {
                    alert('Gigapub ad not available.');
                }
            };
            document.body.appendChild(script);
        });

        document.addEventListener('DOMContentLoaded', updateBalance);
    </script>
